<Window x:Class="UI.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Item" Height="367" Width="600">
    <Grid Margin="20,20,20,11">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="0" Height="16"/>
        <TextBox Name="NombreTextBox" Width="200" Margin="10,10,0,10" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Cantidad:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Height="16"/>
        <TextBox Name="CantidadTextBox" Width="200" Margin="10,10,0,10" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Descripción:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Height="16"/>
        <TextBox Name="DescripcionTextBox" Width="200" Margin="10,10,0,10" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Categoría:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Height="16"/>
        <ComboBox Name="CategoriaComboBox" Width="200" Margin="10,10,0,10" Grid.Row="3" Grid.Column="1" DisplayMemberPath="Nombre"/>

        <TextBlock Text="Área:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Height="16"/>
        <ComboBox Name="AreaComboBox" Width="200" Margin="10,10,0,10" Grid.Row="4" Grid.Column="1" DisplayMemberPath="Nombre"/>

        <TextBlock Text="Contenedor:" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" Height="16"/>
        <ComboBox Name="ParentItemComboBox" Width="200" Margin="10,7,0,7" Grid.Row="5" Grid.Column="1" DisplayMemberPath="Nombre"/>

        <Button Content="Agregar" Width="100" Height="30" Click="Agregar_Click" HorizontalAlignment="Left" Margin="331,0,0,0" Grid.Column="1"/>
        <Button Content="Cancelar" Width="100" Height="30" Margin="331,0,0,0" Click="Cancelar_Click" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>

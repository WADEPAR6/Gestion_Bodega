<Window x:Class="UI.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Categoría" Height="200" Width="394">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre:" Margin="10" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <TextBox Name="NombreTextBox" Width="200" Height="30" Margin="10" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Descripción:" Margin="10" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
        <TextBox Name="DescripcionTextBox" Width="200" Height="30" Margin="10" Grid.Row="1" Grid.Column="1"/>

        <Button Content="Agregar" Width="100" Height="30" Margin="135,0,0,0" Click="Agregar_Click" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"/>
        <Button Content="Cancelar" Width="100" Height="30" Margin="23,0,0,0" Click="Cancelar_Click" Grid.Row="2" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
    </Grid>
</Window>

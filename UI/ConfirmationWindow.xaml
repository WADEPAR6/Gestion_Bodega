<Window x:Class="UI.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación" Height="200" Width="400">
    <Grid Margin="20">
        <TextBlock Name="MessageTextBlock" Text="¿Estás seguro de que deseas eliminar este elemento?" TextWrapping="Wrap" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Sí" Width="80" Margin="10" Click="YesButton_Click"/>
            <Button Content="No" Width="80" Margin="10" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
